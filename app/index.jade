doctype html
block vars
	- var bodyclass = "index";

html( lang='en' )
	head
		block head
			meta( charset='utf-8' )
			meta( http-equiv='X-UA-Compatible', content='IE=edge,chrome=1' )
			meta( name='viewport', content='width=device-width' )

			title
				block title
					= name

			link( rel='stylesheet', href='css/layout.min.css' )
			link( rel='stylesheet', href='css/dxrxt.css' )
			// script( src='/js/jquery.min.js' )
			// script( src='https://w.soundcloud.com/player/api.js', defer)

	body( class='page page-' + bodyclass )
		header.header.page-header
			h1.ttl.page-header-ttl
				a.lnk.page-header-ttl-lnk( href='' )= name

			include _menu
			+menuMaker( 'page-social', social, 'link' )

		main.page-main
			iframe(width="100%", height="340", scrolling="no", frameborder="no", src="https://w.soundcloud.com/player/?url=https%3A//api.soundcloud.com/users/154985705&amp;auto_play=false&amp;hide_related=false&amp;show_comments=true&amp;show_user=true&amp;show_reposts=false&amp;visual=true")
			p.page-main-description= description

			section.page-main-peep
				each val in peeps
					.peep
						img.peep-image(src="' val.image '" )
						h2.peep-title= val.name
						p.peep-bio= val.bio