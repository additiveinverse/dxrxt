doctype html
block vars
	- var bodyclass = "index";

html( lang='en' )
	head
		block head
			meta( charset='utf-8' )
			meta( http-equiv='X-UA-Compatible', content='IE=edge,chrome=1' )
			meta( name='viewport', content='width=device-width' )

			title
				block title
					= name

			link( rel='stylesheet', href='/css/layout.min.css' )
			link( rel='stylesheet', href='/css/dxrxt.css' )
			script( src='/js/jquery.min.js' )

	body( class='page page-' + bodyclass )
		header.header.page-header
			h1.ttl.page-header-ttl
				a.lnk.page-header-ttl-lnk( href='' )= name

			include _menu
			+menuMaker( 'page-social', social, 'link' )

			p.page-header-desc.description= description


		main.page-main
