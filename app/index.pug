doctype html
block vars
	- var bodyclass = "index";

html( lang='en' )
	head
		block head
			meta( charset='utf-8' )
			meta( http-equiv='X-UA-Compatible', content='IE=edge,chrome=1' )
			meta( name='viewport', content='width=device-width' )

			title
				block title
					= name
			link( rel="stylesheet", type='text/css', href='http://fonts.googleapis.com/css?family=Poppins:300|Comfortaa:400,700' )
			link( rel='stylesheet', type='text/css', href='css/layout.min.css' )
			link( rel='stylesheet', type='text/css', href='css/dxrxt.css' )
			// script( src='/js/jquery.min.js' )
			// script( src='https://w.soundcloud.com/player/api.js', defer)

	body( class='page page-' + bodyclass )
		header.header.page-header
			h1.ttl.page-header-ttl
				a.lnk.page-header-ttl-lnk( href='' )= name

			include _menu
			+menuMaker( 'page-social', social, 'link' )

		main.page-main

			.page-main-
				.page-main--ep
					iframe( width="300px", height="420px", scrolling="no", frameborder="no", src="https://bandcamp.com/EmbeddedPlayer/album=562850161/size=large/bgcol=333333/linkcol=e99708/transparent=true/", seamless)
					//- a( href="http://deadworlds.bandcamp.com/album/zero-point-five-ep") 
					//- 	Zero Point Five ep by Dead Worlds

				p.page-main-description= description

			section.page-main-whodat
				each val in who
					.whodat
						img.whodat-image(src=val.image )
						.whodat-person
							h2.whodat-person-name= val.name
							p.whodat-person-bio= val.bio